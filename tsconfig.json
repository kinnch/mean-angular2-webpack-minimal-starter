{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "baseUrl": "./web/src",        
        "lib": [
            "dom",
            "es6"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compileOnSave": false
}